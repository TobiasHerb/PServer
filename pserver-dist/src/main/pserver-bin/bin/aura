bin=`dirname "$0"`
bin=`cd "$bin"; pwd`

# get pserver config
. "$bin"/env.sh

if [ "$PSERVER_IDENT_STRING" = "" ]; then
        PSERVER_IDENT_STRING="$USER"
fi

PSERVER_LIB_CLIENTS_DIR=$PSERVER_ROOT_DIR/lib_clients

JVM_ARGS="$JVM_ARGS -Xmx512m"

# auxilliary function to construct a lightweight classpath for the
# PSERVER CLI client
constructCLIClientClassPath() {

	for jarfile in $PSERVER_LIB_DIR/*.jar ; do
		if [[ $CC_CLASSPATH = "" ]]; then
			CC_CLASSPATH=$jarfile;
		else
			CC_CLASSPATH=$CC_CLASSPATH:$jarfile
		fi
	done
	
	for jarfile in $PSERVER_LIB_CLIENTS_DIR/*.jar ; do
		CC_CLASSPATH=$CC_CLASSPATH:$jarfile
	done

	echo $CC_CLASSPATH
}

CC_CLASSPATH=`manglePathList $(constructCLIClientClassPath)`

log=$PSERVER_LOG_DIR/pserver-$PSERVER_IDENT_STRING-pserver-client-$HOSTNAME.log
log_setting="-Dlog.file="$log" -Dlog4j.configuration=file:"$PSERVER_CONF_DIR"/log4j.properties"

export PSERVER_CONF_DIR

$JAVA_RUN $JVM_ARGS $log_setting -classpath $CC_CLASSPATH eu.aura.client.CliFrontend $*
